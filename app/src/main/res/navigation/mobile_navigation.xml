<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_find">

    <fragment
        android:id="@+id/navigation_find"
        android:name="com.avs.moviefinder.ui.home.HomeFragment"
        android:label="@string/title_find_movie"
        tools:layout="@layout/fragment_find" />

    <fragment
        android:id="@+id/navigation_watch_later"
        android:name="com.avs.moviefinder.ui.dashboard.DashboardFragment"
        android:label="@string/title_watch_later"
        tools:layout="@layout/fragment_watch_later" />

    <fragment
        android:id="@+id/navigation_watched"
        android:name="com.avs.moviefinder.ui.notifications.NotificationsFragment"
        android:label="@string/title_watched"
        tools:layout="@layout/fragment_watched" />
</navigation>